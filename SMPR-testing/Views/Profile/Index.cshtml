@model SMPR_testing.Models.StudentStatistic

@{
    bool showCorrectAnswers = User.IsInRole("lecturer") || User.IsInRole("admin");
}
<div class="first-screen">
    <div class="container content">

        <div id="top-wrapper">
            <div id="top">
                <h2>@Model.Name</h2>
                <h2>Результат: @Model.AnswersCorrect / @Model.TotalAnswers</h2>
            </div>
        </div><!-- #top-wrapper-->

        <div id="content">
            <table class="table-hover table-bordered results">
                <tr>
                    <th class="table-num col-md-1">#</th>
                    <th class="table-quest col-md-4">Вопрос</th>
                    <th class="table-answ col-md-4">Ответ</th>
                    <th class="table-amount col-md-3">Цена вопроса</th>
                </tr>
                @{
                    int i = 1;
                }

                @foreach (var answer in Model.Answers)
                {

                    string answerClass = "";
                    if (showCorrectAnswers)
                    {
                        if (answer.IsCorrect)
                        {
                            answerClass = "correct-answer";
                        }
                        else
                        {
                            answerClass = "wrong-answer";
                        }
                    }

                    <tr class="@answerClass">
                        <td>@i</td> @{ ++i; }
                        <td>@answer.Question</td>
                        <td>@answer.Answer</td>
                        <td>@answer.Price.ToString("f2")</td>
                    </tr>
                }
            </table>
        </div>
        <div class="clr"></div>
    </div>
</div>

        <script type="text/javascript">
            $('.bxslider').bxSlider({
                mode: 'fade'
            });
        </script>
